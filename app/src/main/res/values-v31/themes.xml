<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Someverse" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 기본 배경 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 투명 윈도우 -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- Android 12+ Splash Screen 완전 비활성화 -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
    </style>
</resources>
